// schema.prisma

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL") // uses connection pooling
}

model User {
  id            String       @default(cuid()) @id
  name          String?
  checkIn       DateTime
  checkOut      DateTime
  email         String?   @unique
  @@map(name: "users")
}